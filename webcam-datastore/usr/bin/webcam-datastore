#!/bin/sh

rc=0

APP_DIR="$HOME/webcam-datastore"
mkdir -p "$APP_DIR"
cd "$APP_DIR"
ARG_CMD=""
S$="-s https://fsserver:3499"

while [ "$1" ] ; do
	if [ "$1" = "-s" ] ; then
		shift
		S$="-s $1"
	else
		ARG_CMD="$ARG_CMD $1"
	fi
	shift
done

ARG_CMD="$ARG_CMD $S"

/usr/share/webcam-datastore/webcam_datastore.py $ARG_CMD || rc=$?

exit $rc
